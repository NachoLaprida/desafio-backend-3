        <main class="container">
            <h1 class="text-center">Camisetas del Mundial 2022</h1>
            <section>
                <div class="container d-flex flex-row flex-wrap" id="nacho">
                    <% if(listaProductos.length > 0) {%>
                            <% listaProductos.forEach( prod => { %>
                                <div class="card tarjeta m-3" style="width: 18rem;" id=<%= prod.id %>>
                                    <img src=<%= prod.thumbnail %> class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title"><%= prod.name %></h5>
                                        <h5 class="card-title">$<%= prod.price %></h5>
                                    </div>
                                    <button class="btn btn-primary" type="button" onclick='addToCart("<%= prod.id %>")'>+</button>
                                </div>
                            <% }) %>
                    <% }else{ %>
                        <h2>No hay productos</h2>
                    <% } %>
                </div>
                <div class="container justify-content-center m-3">
                    <%- include('../partials/form.ejs')  %>
                </div>
            </section>
            <section>
                <div id="catalogo" class="container d-flex flex-row flex-wrap">
            

                </div>
            </section>
            <section>
                <div class="row">
                    <div class="col">
                        <ul id="chat">
                            
                        </ul>
                    </div>
                    <div class="col">
                        <form action="" onsubmit="return addText(this)" class="mt-5">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input  type="email" class="form-control col-6" id="email" name="email"
                                    placeholder="Ingresa tu correo" />
                            </div>
                            <div class="form-group">
                                <label for="firstName">Nombre</label>
                                <input  type="text" class="form-control col-6" id="firstName" name="firstName"
                                    placeholder="Ingresa tu nombre" />
                            </div>
                            <div class="form-group">
                                <label for="lastName">Apellido</label>
                                <input  type="text" class="form-control col-6" id="lastName" name="lastName"
                                    placeholder="Ingresa tu apellido" />
                            </div>
                            <div class="form-group">
                                <label for="age">Edad</label>
                                <input  type="number" class="form-control col-6" id="age" name="age"
                                    placeholder="Ingresa tu edad" />
                            </div>
                            <div class="form-group">
                                <label for="alias">Alias</label>
                                <input  type="text" class="form-control col-6" id="alias" name="alias"
                                    placeholder="Ingresa tu alias" />
                            </div>
                            <div class="form-group">
                                <label for="avatar">Avatar</label>
                                <input  type="text" class="form-control col-6" id="avatar" name="avatar"
                                    placeholder="Ingresa tu avatar" />
                            </div>
                            <div class="form-group">
                                <label for="message">Mensaje</label>
                                <input  type="text" class="form-control col-6" id="message" name="message"
                                    placeholder="Ingresa tu mensaje" />
                            </div>
                            <br>
                            <input class="btn btn-primary" type="submit" value="Enviar">
                        </form>
                    </div>
        
                    
                </div>
            </section>
            
    
        
        
        </main>
        <footer>
            <%- include('../partials/footer.ejs', {mensajeFooter: 'Proyecto CoderHouse curso backend || Ignacio Laprida'})%>
        </footer>
        
        <script src="../../../js/client.js"></script>
